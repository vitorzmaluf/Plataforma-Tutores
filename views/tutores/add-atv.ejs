<!DOCTYPE html>
<head>
    <title>Tutor - Adicionar atividade</title>

    <!-- Required meta tags -->
    <meta charset="utf-8">

    <!-- Styles-->
    <link rel="stylesheet" type="text/css" href="/css/header.css">
    <link rel="stylesheet" type="text/css" href="/css/tutor_main.css">
</head>

<body>

    <header class="header">
        <div class="logoff-pg">
            <a href="/" class="logoff-item">
                <span class="logoff-txt">Clique aqui para fazer logoff</span>
            </a>
        </div>
        <div class="login-pg">
            <a href="/login" class="login-item">
                <span class="login-txt"><p>Bem vindo, <!--Colocar o nome--></p></span>
            </a>
           
        </div>
    </header>

    <nav class="navbar">
        <ul class="navbar-nav">
            <li class="nav-item-img">
                <a href="/">
                    <div class="img"></div>
                </a>
            </li>
            <li class="nav-item">
                <a href="/tutor" class="nav-link">
                    <span class="link-text"><p style="font-size: 10px; margin-top: 30px;">Painel</p><strong>Inicial</strong></span>
                </a>
            </li>
            <li class="nav-active">
                <a href="#" class="nav-link">
                    <span class="link-text"><p style="font-size: 10px; margin-top: 30px;">Atividade</p><strong>Online</strong></span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <span class="link-text"><p style="font-size: 10px; margin-top: 30px;">Avaliações &</p><strong>Feedback</strong></span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <span class="link-text"><p style="font-size: 10px; margin-top: 30px;">Chat de</p><strong>Dúvidas</strong></span>
                </a>
            </li>
        </ul>
    </nav>

    <main>
        <div class="box_atv">
            <form action="/tutor/add-atv" method="post">
                <p>+Adicionar atividade</p>
                <div class="input_atv">
                    <label>
                        Titulo: <input type="text" name="titulo">
                    </label>
                </div>
                <div class="input_atv">
                    <label>
                        Conteúdo: <input type="text" name="conteudo">
                    </label>
                    <select name="alunosRelacionados">
                        <% for (var aluno of alunos){ %>
                            <option value='<%= aluno.id %>'><%= aluno.nome %></option>
                        <% } %>
                    </select>
                </div>
                <input class="btn_newatv" type="submit" value="Salvar Atividade">
            </form>
        </div>
    </main>

