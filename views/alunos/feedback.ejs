<!DOCTYPE html>
<head>
    <title>Aluno - Painel Inicial</title>

    <!-- Required meta tags -->
    <meta charset="utf-8">

    <!-- Styles-->
    <link rel="stylesheet" type="text/css" href="/css/header.css">
    <link rel="stylesheet" type="text/css" href="/css/aluno_main.css">
</head>

<body>

    <header class="header">
        <div class="logoff-pg">
            <a href="/" class="logoff-item">
                <span class="logoff-txt">Clique aqui para fazer logoff</span>
            </a>
        </div>
        <div class="login-pg">
            <a href="/login" class="login-item">
                <span class="login-txt"><p>Bem vindo, <!--Colocar o nome--></p></span>
            </a>
           
        </div>
    </header>

    <nav class="navbar">
        <ul class="navbar-nav">
            <li class="nav-item-img">
                <a href="/">
                    <div class="img"></div>
                </a>
            </li>
            <li class="nav-item">
                <a href="/aluno" class="nav-link">
                    <span class="link-text"><p style="font-size: 10px; margin-top: 30px;">Painel</p><strong>Inicial</strong></span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/aluno/atividades" class="nav-link">
                    <span class="link-text"><p style="font-size: 10px; margin-top: 30px;">Atividade</p><strong>Online</strong></span>
                </a>
            </li>
            <li class="nav-active">
                <a href="/aluno/feedback" class="nav-link">
                    <span class="link-text"><p style="font-size: 10px; margin-top: 30px;">Avaliações &</p><strong>Feedback</strong></span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/aluno/chat" class="nav-link">
                    <span class="link-text"><p style="font-size: 10px; margin-top: 30px;">Chat de</p><strong>Dúvidas</strong></span>
                </a>
            </li>
        </ul>
    </nav>

    <main>
        <div class="duv-main">
            <div class="painel-view">
                <div class="title-view">
                    Avaliações
                </div>
                <div class="itens-view">
                    <div class="item">a1</div>
                    <div class="item">b1</div>
                    <div class="item">c1</div>
                    <div class="item">a1</div>
                    <div class="item">b1</div>
                    <div class="item">c1</div>
                    <div class="item">a1</div>
                    <div class="item">b1</div>
                    <div class="item">c1</div>
                </div>

            </div>

            <div class="painel-view">
                <div class="title-view">
                    Feedback do Tutor
                </div>
                <div class="itens-view">
                    <% for (var feedback of feedbacks){ %>
                        <a href="/aluno/feedback/<%= feedback.id %>"><div class="item"><%= feedback.assunto %> <%= feedback.corpo %> <%= feedback.nota %></div></a>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

</body>
