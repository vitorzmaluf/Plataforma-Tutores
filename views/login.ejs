    <main>
        <div class="formulario">
            <h1>Login</h1>
            <form action="login" method="post">
                <h3><%= message %></h3>  
                <div class="i-login">
                    <svg aria-hidden="true" height="15" width="15" focusable="false" data-prefix="fas" data-icon="user" class="svg-inline--fa fa-user fa-w-14" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path fill="currentColor" d="M224 256c70.7 0 128-57.3 128-128S294.7 0 224 0 96 57.3 96 128s57.3 128 128 128zm89.6 32h-16.7c-22.2 10.2-46.9 16-72.9 16s-50.6-5.8-72.9-16h-16.7C60.2 288 0 348.2 0 422.4V464c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48v-41.6c0-74.2-60.2-134.4-134.4-134.4z"></path>
                    </svg>
                    <input type="text"  placeholder="Usuário" name="login">
                </div>

                <div class="i-login">
                    <svg aria-hidden="true" height="15" width="15" focusable="false" data-prefix="fas" data-icon="key" class="svg-inline--fa fa-key fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M512 176.001C512 273.203 433.202 352 336 352c-11.22 0-22.19-1.062-32.827-3.069l-24.012 27.014A23.999 23.999 0 0 1 261.223 384H224v40c0 13.255-10.745 24-24 24h-40v40c0 13.255-10.745 24-24 24H24c-13.255 0-24-10.745-24-24v-78.059c0-6.365 2.529-12.47 7.029-16.971l161.802-161.802C163.108 213.814 160 195.271 160 176 160 78.798 238.797.001 335.999 0 433.488-.001 512 78.511 512 176.001zM336 128c0 26.51 21.49 48 48 48s48-21.49 48-48-21.49-48-48-48-48 21.49-48 48z"></path>
                    </svg>
                    <input type="password" placeholder="Senha" name="senha">
                </div>

                <div class="r-btn">
                    <label for="radio-aluno"><input type="radio" name="tipo" value="radAluno" checked="checked">Aluno</label>
                    <label for="radio-aluno"><input type="radio" name="tipo" value="radResp">Responsável</label>
                    <label for="radio-aluno"><input type="radio" name="tipo" value="radTutor">Tutor</label>
                </div>
                    <input class="btn" type="submit" value="Entrar">
