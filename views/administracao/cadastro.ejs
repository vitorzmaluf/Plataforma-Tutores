<!DOCTYPE html>
<head>
    <title>TUTORES Reforço Escolar</title>

    <!-- Required meta tags -->
    <meta charset="utf-8">

    <!-- Styles-->
    <link rel="stylesheet" type="text/css" href="/css/styles_adm.css">
</head>

<body class="login-screen">

    <header class="header">
        <div class="logoff-pg">
            <a href="/" class="logoff-item">
                <span class="logoff-txt"><p>Clique aqui para fazer logoff</p></span>
            </a>
        </div>

        <div class="login-pg">
            <a href="/login" class="login-item">
                <span class="login-txt">Bem Vindo,</span>
            </a>
        </div>
    </header>

    <nav class="navbar">
        <ul class="navbar-nav">
            <li class="nav-item-img">
                <a href="/">
                    <div class="img"></div>
                </a>
            </li>
            <div class="nav-pages">
                <li class="nav-item">
                    <a href="/administracao" class="nav-link">
                        <span class="link-text"><p style="font-size: 10px; margin-top: 30px;">PAINEL</p><strong>INICIAL</strong></span>
                    </a>
                </li>
                <li class="nav-active">
                    <a href="/administracao/cadastro" class="nav-link">
                        <span class="link-text"><p style="font-size: 10px; margin-top: 30px;">CADASTRAR</p><strong>USUÁRIO</strong></span>
                    </a>
                </li>
            </div>
        </ul>
    </nav>

    <script>
        function hideInput(){
            pNome = document.getElementById("pNome");
            pNome.style.visibility = 'hidden';
            pLogin = document.getElementById("pLogin");
            pLogin.style.visibility = 'hidden';
            pSenha = document.getElementById("pSenha");
            pSenha.style.visibility = 'hidden';
            tutores = document.getElementById("tutores");
            tutores.style.visibility = 'hidden';
        }
        function showInput(){
            pNome = document.getElementById("pNome");
            pNome.style.visibility = 'visible';
            pLogin = document.getElementById("pLogin");
            pLogin.style.visibility = 'visible';
            pSenha = document.getElementById("pSenha");
            pSenha.style.visibility = 'visible';
            tutores = document.getElementById("tutores");
            tutores.style.visibility = 'visible';
        }
    </script>
    <main>
        <div class="formulario">
            <form action="/administracao/cadastro" method="post">
                <div class="i-login">
                    <input type="text"  placeholder="Nome" name="nome">
                </div>
                <div class="i-login">
                    <input type="text"  placeholder="Sobrenome" name="sobrenome">
                </div>
                <div class="i-login">
                    <input type="text"  placeholder="Login" name="login">
                </div>
                <div class="i-login">
                    <input type="passwor"  placeholder="Senha" name="senha">
                </div>
                <div class="i-login">
                    <input type="text"  placeholder="Nome do Responsável" name="pNome">
                </div>
                <div class="i-login">
                    <input type="text"  placeholder="Login do Responsável" name="pLogin">
                </div>
                <div class="i-login">
                    <input type="password"  placeholder="Senha do Responsável" name="pSenha">
                </div>
                <div class="i-tutor">
                    Selecione o tutor responsável
                    <select name="tutores" id="tutores">
                        <% for (var tutor of tutores){ %>
                            <option value='<%= tutor.id %>'><%= tutor.nome %></option>
                        <% } %>
                    </select>
                </div>
                <div>
                    <label for="radio-admin"><input type="radio" name="tipo" value="0" onclick="hideInput()">Administrador</label>
                    <label for="radio-aluno"><input type="radio" name="tipo" value="1" onclick="showInput()" checked="checked">Aluno</label>
                    <label for="radio-pai"><input type="radio" name="tipo" value="2" onclick="hideInput()">Tutor</label>
                </div>
    
                <input class="btn" type="submit" value="Cadastrar">
            </form>
        </div>
    </main>
    

</body>