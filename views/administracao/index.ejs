<!DOCTYPE html>
<head>
    <title>TUTORES Reforço Escolar</title>

    <!-- Required meta tags -->
    <meta charset="utf-8">

    <!-- Styles-->
    <link rel="stylesheet" type="text/css" href="/css/styles_adm.css">
</head>

<body>

    <header class="header">
        <div class="logoff-pg">
            <a href="/" class="logoff-item">
                <span class="logoff-txt"><p>Clique aqui para fazer logoff</p></span>
            </a>
        </div>

        <div class="login-pg">
            <a href="/login" class="login-item">
                <span class="login-txt"><p>Bem Vindo, <!--username--></p></span>
            </a>
        </div>
    </header>

    <nav class="navbar">
        <ul class="navbar-nav">
            <li class="nav-item-img">
                <a href="/">
                    <div class="img"></div>
                </a>
            </li>
            <div class="nav-pages">
                <li class="nav-active">
                    <a href="/administracao" class="nav-link">
                        <span class="link-text"><p style="font-size: 10px; margin-top: 30px;">PAINEL</p><strong>INICIAL</strong></span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/administracao/cadastro" class="nav-link">
                        <span class="link-text"><p style="font-size: 10px; margin-top: 30px;">CADASTRAR</p><strong>USUÁRIO</strong></span>
                    </a>
                </li>
            </div>
        </ul>
    </nav>


    <main>
        <div class="user-inf">
            <div class="user-photo"></div>
            <div class="user-name"><%= nome %><br>ADMINISTRADOR</div>
        </div>
        <div class="tables">
            <div class="tbl-tut">Tutores </div>
                <ul>
                    <% for (var tutor of tutores){ %>
                        <li><%= tutor.nome %></li>
                    <% } %>
                </ul>
            <div class="tbl-alu">Alunos </div>
                <ul>
                    <% for (var aluno of alunos){ %>
                        <li><%= aluno.nome %></li>
                    <% } %>
                </ul>
        </div>
    </main>
</body>